// Если спецпроект интегрирован в сайт, из media queries обычно хватает только двух: mobile и not_mobile
@import 'fonts'
@import 'mq'

@import 'functions'
@import 'keyframes'

// base.styl подключается только в том случае, когда спецпроект расположен на отдельной странице
@import 'base'

.Raiff
    position relative
    font-size 16px
    background-color #fff
    overflow hidden
    
    @media $mq.iphone6
        font-size 18px

    &-wrapper
        min-height 100vh
        padding 20px 0

        @media $mq.not_mobile
            background-color #F3E737

            &--answer
                background-color #F4F4F4

        @media $mq.desktop
            padding 125px 0 75px
        
    &-container
        padding 0

        @media $mq.desktop
            padding 0 15px

        @media (min-width 1055px)
            padding 0
        
    &-btn
        width 100%
        height 60px
        font-weight 700
        border-radius 5px
        background #FFEF06
        background linear-gradient(180deg, #FFEF06 0%, #FFCC40 100%)
        transition opacity .2s
        
        &:hover
            opacity .6
        
    &-enter
        min-height 420px
        padding 100px 15px 40px
        
        @media $mq.iphone6
            padding 100px 20px 40px
        
        @media $mq.not_mobile
            min-height 600px
            padding 100px 60px 0
        
        @media $mq.desktop
            padding-top 155px
        
        &__logo
            position absolute
            z-index 1
            top 25px
            right 29px
        
        &__img
            display block
            max-width 100%
            margin-top 18px
            
            @media $mq.not_mobile
                position absolute
                bottom 70px
                right 0
                width 300px
                max-width 100%
                margin-top 0
            
            @media $mq.desktop
                top 173px
                bottom auto
                right 0
                width auto
            
            @media (min-width 1340px)
                right 44px

        &__title
            position relative
            z-index 1
            font-size 36px
            font-weight 700
            
            @media $mq.not_mobile
                font-size 48px
        
        &__desc
            position relative
            z-index 1
            width 450px
            max-width 100%
            margin-top 10px
            font-size 18px
            line-height 1.4em
            
            @media $mq.not_mobile
                margin-top 34px
                font-size 24px
            
            @media $mq.desktop
                margin-top 47px

        &__start-btn
            position relative
            z-index 1
            width 200px
            margin-top 8px
            
            @media $mq.iphone6
                margin-top 20px
            
            @media $mq.not_mobile
                position absolute
                bottom 85px
                margin-top 0px
    
    &-question
        position relative
        width 530px
        max-width 100%
        min-height 420px
        margin 0 auto
        padding 35px 15px 10px
        transition transform .2s

        @media $mq.iphone6
            width 540px
            padding 35px 20px 10px
        
        @media $mq.not_mobile
            min-height 600px
            padding 65px 20px 50px
        
        &--answer
            transform translate3d(0,-20px,0)
            
        &__pages
            position absolute
            top 8px
            left 0
            right 0
            color #C4C4C4
            font-family 'Credit Card', 'Roboto', sans-serif
            font-size 12px
            letter-spacing .1em
            text-align center
            text-transform uppercase
            user-select none
            
            & span
                font-size 21px
                
            @media $mq.not_mobile
                top 28px
                font-size 14px

        &__options
            display flex
            flex-wrap wrap
            margin -15px 0 0 -15px
            padding-top 30px
            
            @media $mq.not_mobile
                margin -15px 0 0 -20px
        
        &__options-item
            width 50%
            padding 15px 0 0 15px
            
            @media $mq.not_mobile
                padding 15px 0 0 20px
        
        &__option
            width 100%
            height 55px
            padding 0 10px
            border 2px solid #000
            background-color #fff

            @media (hover), (min-width:0\0), (min--moz-device-pixel-ratio:0)
                transition background-color .2s

                &:hover
                    color #fff
                    background-color #000
                
        &__user-answer
            width 180px
            height 40px
            margin-top 18px
            color #FF6C6C
            font-size 14px
            text-align center
            line-height 36px
            border 2px solid currentColor
            
            &--correct
                color #33A860
                
            @media $mq.not_mobile
                margin-top 21px
        
        &__answer
            margin-top 18px
            font-size 14px
            line-height 1.3em
            
            & a
                color #105990
                border-bottom 1px solid #a0d0f5
                
                &:hover
                    color #cd192e
                    border-bottom 1px solid #f6b4bc
            
            @media $mq.not_mobile
                margin-top 21px
                font-size 16px
                line-height 1.85em
        
        &__next-btn
            position relative
            display inline-block
            margin-top 18px
            padding-right 20px
            font-weight 700
            cursor pointer
            transition opacity .2s
            
            & svg
                position absolute
                top 0
                right 0
            
            &:hover
                opacity .6
                
            @media $mq.not_mobile
                position absolute
                bottom 25px
                margin-top 0
    
    &-card
        position relative
        transition opacity .2s
        
        &::before
            content ''
            position absolute
            bottom -5px
            left 50%
            width 126%
            height 6.8%
            background-image url('data:image/png;base64,')
            background-size cover
            transform translate3d(-50%,0,0)
        
        &::after
            content ''
            display block
            padding-top 61.6%
        
        &__img
            position absolute
            display block
            width 100%
            border-radius 20px
        
        &__loupe
            position absolute
            z-index 1
            top 14.5%
            width 29.4%
            left -23%
        
        &__logo
            position absolute
            top 8%
            left 5%
            width 26.2%
            color #fff
            
            .is-dark &
            .is-dark-logo &
                color #000
                
            & svg
                width 100%
                height 100%
        
        &__holder
            position absolute
            bottom 7.2%
            left 5%
            color #fff
            font-family 'Credit Card', 'Roboto', sans-serif
            text-transform uppercase
            user-select none
            
            .is-dark &
                color #000
                
    &-result
        
        &__head
            position relative
            padding 15px
            background-color #fff
            
            @media $mq.iphone6
                padding 20px
            
            @media $mq.not_mobile
                min-height 335px
                padding 50px 60px 70px
        
        &__bottom
            position relative
            padding 15px
            border-top 10px solid #f0f0f0
            background #000
            background-image url('images/result/bg.jpg')
            background-size cover
            
            @media $mq.iphone6
                padding 20px
            
            @media $mq.not_mobile
                min-height 335px
                padding 42px 60px 0
                border-color #F3E737
        
        &__img
            position absolute
            top 10px
            right -20px
            width 150px

            @media $mq.iphone6
                right -10px
            
            @media $mq.not_mobile
                width auto

            @media $mq.desktop
                right 118px
            
        &__text
            position relative
            font-size 24px
            font-weight 700
            line-height 1.2em
            
            @media $mq.iphone6
                font-size 27px
            
            @media $mq.not_mobile
                font-size 36px
                line-height 1.45em
        
        &__share
            position relative
            margin-top 8px
            
        &__restart-btn
            position relative
            display inline-block
            margin-top 20px
            padding-right 23px
            opacity .5
            transition opacity .2s
            cursor pointer
            
            & svg
                position absolute
                top 1px
                right 0
            
            &:hover
                opacity 1
                
            @media $mq.not_mobile
                position absolute
                bottom 44px
                margin-top 0
            
        &__title
            width 290px
            max-width 100%
            margin-top 18px
            color #fff
            font-size 18px
            font-weight 700
            line-height 1.2em
            
            @media $mq.not_mobile
                margin-top 0
                font-size 24px
                line-height 1.45em
            
        &__try-btn
            display block
            width 250px
            max-width 100%
            margin-top 18px
            
            @media $mq.not_mobile
                margin-top 20px
        
        &__note
            position relative
            max-width 410px
            margin-top 18px
            color #fff
            font-size 12px
            line-height 1.2em
            
            &::before
                content '*'
                position absolute
                top -2px
                left -10px
            
            @media $mq.not_mobile
                margin-top 43px
                line-height 1.75em
            
        &__card
            position relative
            width 357px
            max-width 100%
            
            @media $mq.not_mobile
                position absolute
                top 48px
                right 40px
                width 235px
            
            @media $mq.desktop
                right 90px
                width 357px
            
.likely

    &__widget
        min-width 58px
        height 44px
        color #808080
        border 2px solid  #BFBFBF
        background-color #fff

        &:not(:last-child)
            margin-right 5px
        
        &:hover
            color #fff
            border-color #808080
            background-color #808080
        
        @media $mq.iphone6
            &:not(:last-child)
                margin-right 10px
            
        @media $mq.not_mobile
            &--facebook
                padding: 0 15px 0 10px
    
    &__button--facebook
        display none
        
        @media $mq.not_mobile
            display block

    &__icon
        background-color transparent

        svg
            width: 24px
            height: @width

        &--vkontakte
            svg
                width: 28px
                height: @width

        &--facebook

            @media $mq.not_mobile
                margin-right 6px





















